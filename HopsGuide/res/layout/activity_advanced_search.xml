<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hopsguide.AdvancedSearchActivity" >

    <Spinner
        android:id="@+id/countrySpinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/countryLabel"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/countryLabel" />

    <TextView
        android:id="@+id/aromaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/countryLabel"
        android:layout_below="@+id/countryLabel"
        android:layout_marginTop="29dp"
        android:text="Aroma"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/aromaInputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/aromaLabel"
        android:layout_alignLeft="@+id/countrySpinner"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/countryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/countryLabel"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/typeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/typeSpinner"
        android:layout_alignLeft="@+id/aromaLabel"
        android:layout_marginBottom="20dp"
        android:text="Type"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aromaInputLabel"
        android:layout_below="@+id/aromaInputLabel" />

    <TextView
        android:id="@+id/alphaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/typeLabel"
        android:layout_below="@+id/typeLabel"
        android:text="Alpha acid"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/alphaSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/typeLabel"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/storageIndexLabel" />

    <TextView
        android:id="@+id/betaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/alphaLabel"
        android:layout_below="@+id/alphaSpinner"
        android:text="Beta acid"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/betaSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/storageIndexLabel" />

    <TextView
        android:id="@+id/typicalForLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/typicalForSpinner"
        android:layout_toLeftOf="@+id/typeSpinner"
        android:text="Typical for"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/typicalForSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/betaSpinner"
        android:layout_below="@+id/betaSpinner" />

    <Spinner
        android:id="@+id/storageIndexSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/typicalForSpinner"
        android:layout_below="@+id/typicalForLabel" />

    <TextView
        android:id="@+id/storageIndexLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/typicalForLabel"
        android:layout_below="@+id/typicalForSpinner"
        android:text="Storage index"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/advancedSearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storageIndexSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Search" />

</RelativeLayout>
